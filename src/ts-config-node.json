{
  "display": "tsconfig-node",
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "strict": false,
    "noEmit": false,
    "sourceMap": false,
    "declaration": true,
    "useDefineForClassFields": true,
    "removeComments": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "paths": {
      "db/*": [ "./db/*" ],
      "src/*": [ "./src/*" ],
      "tests/*": [ "./tests/*" ]
    }
  }
}
